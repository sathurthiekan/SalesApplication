<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1565C0"
    tools:context=".employeesView">

    <Button
        android:id="@+id/authenticateBtn"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F9A825"
        android:text="AUTHENTICATE NEW EMPLOYEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />

    <Button
        android:id="@+id/newUserBtn"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#F9A825"
        android:text="MAKE NEW USER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <Button
        android:id="@+id/newAccountBtn"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9A825"
        android:text="MAKE NEW ACCOUNT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/newEmployeeBtn"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:backgroundTint="#F9A825"
        android:text="MAKE NEW  EMPLOYEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

    <Button
        android:id="@+id/restockInvBtn"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:backgroundTint="#F9A825"
        android:text="RESTOCK INVENTORY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:backgroundTint="#F9A825"
        android:text="EXIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <TextView
        android:id="@+id/empInterfaceText"
        android:layout_width="373dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:background="#F9A825"
        android:text="Your are now in the employee interface, please choose one of the options below:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

</androidx.constraintlayout.widget.ConstraintLayout>